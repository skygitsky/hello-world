#include <iostream>
using namespace std;
int main(){
    
    int H , W ;
//確認    
    do{
        cin >> H >> W ;
        if((H == 0)&&(W == 0)){
        }else{
            for(int i = 1 ; i <= H ; i++){
                switch(i)
                    case 1:
                        for(int j = 1 ; j <= W ; j++){
                            cout << "#" ;
                        }
                            cout << endl ;
                        break ;
                    case H:
                        for(int j = 1 ; j <= W ; j++){
                            cout << "#" ;
                        }
                            cout << endl ;
                        break ;
                    default :
                            cout << "#" ;
                        for(int j = 2 ; j <= W - 1 ; j++){
                            cout << "." ;
                        }
                            cout << "#" << endl ;
                        break ;
            }
        }
        cout << endl ;
    }while((H > 0)||(W > 0));
    
    
    
    
    
    
    
    
    
    
}
